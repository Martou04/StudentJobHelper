@model JobAdDetailsViewModel

@{
    ViewBag.Title = "Job Offer Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container" style="display:inline">
    <div class="row">
        <div class="col-4">
            <img class="card-img-top" style="width:20rem;" src="@Model.LogoUrl" />
        </div>

        <div class="card col-8 border-0">
            <p style="font-size:25px;"><u>@Model.Title</u></p>
            <p>@Model.Description</p>
            <p>Category: <b>@Model.Category</b></p>
            <p>Workplace: <b>@Model.CityOfWork</b></p>
            <p><b>Type Of Employment: @Model.TypeOfEmployment</b></p>
            <p>Number Of Paid Days Off: @Model.OffDaysCount</p>
            <p>Foreign Language Requirement: @Model.ForeignLanguage</p>
            <p>
                Salary Per Month:
                <b>@Model.Salary BGN</b>
            </p>
            <p><i>@(Model.HomeOffice ? "Opurtunity to work from home" : "without possibility to work from home")</i></p>

            <div class="form-inline">
                @if(this.User.Identity?.IsAuthenticated ?? false)
                {
                    <a class="btn btn-warning" asp-controller="JobAd" asp-action="Edit" asp-route-Id="@Model.Id">Edit</a>
                    <a class="ml-2 btn btn-danger" asp-controller="JobAd" asp-action="Delete" asp-route-Id="@Model.Id">Delete</a>

                    <form class="ml-2" asp-controller="JobAd" asp-action="Apply" asp-route-id="@Model.Id" method="post">
                        <input class="btn btn-primary" type="submit" value="Apply" />
                    </form>
                }
            </div>

            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Employer Info</h5>
                    <p class="card-text">Email: @Model.Email</p>
                    <p class="card-text">Phone Number: @Model.PhoneNumber</p>
                </div>
            </div>
        </div>
    </div>
</div>
