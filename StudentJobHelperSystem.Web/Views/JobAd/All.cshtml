@model AllJobAdQueryModel

@{
    ViewBag.Title = "All Job Offers";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form method="get">
    <div class="row">
        <div class="form-group col-md-4 d-flex justify-content-between">
            <div class="form-group">
                <label asp-for="Category"></label>
                <select asp-for="Category" class="form-control">
                    <option value="">All</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category">@category</option>
                    }
                </select>
            </div>

            <div class="form-group col-md-4 d-flex justify-content-between">
                <div class="form-group">
                    <label asp-for="JobAdsPerPage"></label>
                    <select asp-for="JobAdsPerPage" class="form-control">
                        <option value="3">3</option>
                        <option value="6">6</option>
                        <option value="9">9</option>
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group col-md-4">
            <label asp-for="SearchString"></label>
            <input asp-for="SearchString" class="form-control" placeholder="..." />
        </div>

        <div class="form-group col-md-4">
            <div class="form-group">
                <label asp-for="JobAdSorting"></label>
                <select asp-for="JobAdSorting" class="form-control">
                    <option value="0">Newest</option>
                    <option value="1">Oldest</option>
                    <option value="2">SalaryAscending</option>
                    <option value="3">SalaryDescending</option>
                    <option value="4">HomeOffice</option>
                </select>
            </div>
        </div>

        <div class="col-md-1">
            <div class="form-group mt-4 p-2">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>

@if (!Model.JobAds.Any())
{
    <h2 class="text-center">No job offers found by the given criteria!</h2>
}

<div class="row">
    @foreach (var house in Model.JobAds)
    {
        <partial name="_JobAdPartial" model="@house" />
    }
</div>

@{
    int previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    int maxPage = (int)Math.Ceiling((double)Model.TotalJobAds / Model.JobAdsPerPage);
}

<div class="row mb-5">
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="House"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-category="@Model.Category"
           asp-route-searchTerm="@Model.SearchString"
           asp-route-sorting="@((int)Model.JobAdSorting)"><<</a>
    </div>

    @{
        bool shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
        !Model.JobAds.Any();
    }

    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="JobAd"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-category="@Model.Category"
           asp-route-searchTerm="@Model.SearchString"
           asp-route-sorting="@((int)Model.JobAdSorting)">>></a>
    </div>
</div>

